# =============================================================================
# Database Configuration
# =============================================================================

# Database mode: "local" (offline SQLite) or "d1" (remote Cloudflare D1)
DB_MODE=local

# -----------------------------------------------------------------------------
# Required for DB_MODE=d1 (Remote D1 via HTTP API)
# -----------------------------------------------------------------------------
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_DATABASE_ID=
CLOUDFLARE_D1_TOKEN=

# -----------------------------------------------------------------------------
# Required for DB_MODE=local (Local SQLite)
# -----------------------------------------------------------------------------
# Path to Wrangler's local SQLite file (created after first `wrangler dev`)
# Run: ls .wrangler/state/v3/d1/miniflare-D1DatabaseObject/
LOCAL_DB_PATH=

# =============================================================================
# Authentication Configuration
# =============================================================================
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:5173
